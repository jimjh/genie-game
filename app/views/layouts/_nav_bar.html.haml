%nav.top-bar
  %ul.title-area
    %li.name
      %h1= link_to 'Genie', root_path
    %li.toggle-topbar.menu-icon
      %a{href: '#'}
        %span
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.has-dropdown
          %a{href: '#'}
            %img.tiny-avatar{src: current_user.avatar(25)}
            = current_user
          %ul.dropdown
            %li
              %label
                %i.icon-user
                My Account
            %li.divider
            %li
              =link_to settings_path, class: 'icon' do
                %i.icon-cog
                Settings
            %li
              =link_to destroy_session_path, method: :delete, class: 'icon' do
                %i.icon-signout
                = t 'nav.sign_out'
      - else
        %li.has-form
          = link_to t('nav.sign_in'), user_omniauth_authorize_path(:github), class: 'button small'
