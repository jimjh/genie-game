.container
  %nav.top-bar
    %ul
      -# title
      %li.name
        %h1= link_to 'Genie', root_path
      -# button for menu-access in smaller screens
      %li.toggle-topbar
        %a{href: '#'}
    %section
      %ul.left
        %li.divider
        = nav_link 'Home', root_path
        -# nav_link 'About', about_path
      %ul.right
        - if user_signed_in?
          %li.has-dropdown
            %a{href: '#'}= current_user.name
            %ul.dropdown
              %li= link_to 'Settings', settings_path
              %li.divider
              %li= link_to 'Sign Out â†’', destroy_user_session_path, method: :delete
        - else
          %li.has-button
            = link_to 'Sign In', user_omniauth_authorize_path(:github),
              class: 'button small'
