%nav.top-bar
  %ul.title-area
    %li.name
      %h1= link_to 'Genie', root_path
    %li.toggle-topbar.menu-icon
      %a{href: '#'}
        %span
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.has-dropdown
          %a{href: '#'}
            %i.foundicon-smiley
              %p= current_user.name
          %ul.dropdown
            %li
              =link_to settings_path, class: 'icon' do
                %i.foundicon-settings
                  %p Settings
            %li.divider
            %li
              =link_to destroy_session_path, method: :delete, class: 'icon' do
                %i.foundicon-right-arrow
                  %p Sign Out
      - else
        %li.has-form
          = link_to 'Sign In', user_omniauth_authorize_path(:github), class: 'button small'
